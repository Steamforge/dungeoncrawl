env:
  browser: true
  jquery: true

globals:
  # Third-pary
  Handlebars: true
  Modernizr: true
  Mustache: true
  picturefill: true

rules:
  ## Errors

  comma-dangle: 2
  comma-style: [2, "last"]
  consistent-return: 2
  eqeqeq: 2
  no-alert: 2
  no-cond-assign: 2
  no-debugger: 2
  no-empty: 2
  no-extend-native: 2
  no-extra-semi: 2
  no-fallthrough: 2
  no-loop-func: 2
  no-undef: 2
  no-redeclare: 2
  no-sequences: 2
  no-shadow: 2
  semi: 2
  strict: 2
  no-unused-expressions: 2
  yoda: [2, "never"]

  ## Warnings

  block-scoped-var: 1
  camelcase: 1
  comma-spacing: [1, { "before": false, "after": true }]
  dot-notation: 1
  eol-last: 1
  indent: [1, 4, { "SwitchCase": 1 }]
  key-spacing: 1
  object-curly-spacing: [1, "always"]
  new-cap: 0
  no-console: 1
  no-extra-boolean-cast: 1
  no-irregular-whitespace: 1
  no-mixed-spaces-and-tabs: 1
  no-multi-spaces: 1
  no-self-compare: 1
  no-spaced-func: 1
  no-underscore-dangle: 1
  no-unused-vars: [1, { "vars": "all", "args": "none" }]
  no-use-before-define: [1, "nofunc"]
  no-void: 1
  quotes: [1, single]
  semi-spacing: 1
  keyword-spacing: [1, { "before": true }]
  space-before-blocks: [1, "always"]
  space-before-function-paren: [1, { "anonymous": "always", "named": "never" }]
  space-in-parens: [1, "never"]
  space-infix-ops: 1

  # Rules we currently don't enforce
  brace-style: 0
  no-trailing-spaces: 0
